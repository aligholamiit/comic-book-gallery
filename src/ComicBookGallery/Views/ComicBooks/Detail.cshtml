@{
    Layout = null;

    var seriesTitle = "The Amazing Spider-Man";
    var issueNumber = 700;
    var description = "<p>Here goes the description of this comic book!</p>";
    var artists = new string[]
            {
                "Do: The First",
                "Re: The Second",
                "Mi: The Third",
                "Fa: The Fourth"
            };
    }

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        <h1>@seriesTitle</h1>
        <h2>Issue: #@issueNumber</h2>
        <h3>Description:</h3>
        <div>@Html.Raw(description)</div>
        @if (artists.Length > 0)
        {
            <h3>Artists:</h3>
            <div>
                <ul>
                    @foreach (var artist in artists)
                    {
                        <li>@artist</li>
                    }
                </ul>
            </div>
        }
    </div>
</body>
</html>
